pipeline {
    agent any
    
    options {
        // Keep only the last 10 builds
        buildDiscarder(logRotator(numToKeepStr: '10'))
        // Add timestamps to console output
        timestamps()
    }
    
    stages {
        stage('ğŸš€ Welcome') {
            steps {
                echo 'Welcome to Pipeline Genesis!'
                echo 'This is your first Jenkins pipeline - simple and clean!'
            }
        }
        
        stage('ğŸ“¦ Setup') {
            steps {
                echo 'Setting up the environment...'
                sh 'python3 --version'
                sh 'pip3 --version'
            }
        }
        
        stage('ğŸ”§ Install Dependencies') {
            steps {
                echo 'Installing Python dependencies...'
                dir('Jenkins/jenkins-scenarios/scenario_01_pipeline_genesis') {
                    sh 'python3 -m pip install -r requirements.txt'
                }
            }
        }
        
        stage('ğŸ§ª Run Tests') {
            steps {
                echo 'Running tests to ensure everything works...'
                dir('Jenkins/jenkins-scenarios/scenario_01_pipeline_genesis') {
                    sh 'python3 -m pytest tests/ -v --tb=short'
                }
            }
            post {
                always {
                    echo 'Tests completed!'
                }
            }
        }
        
        stage('ğŸ³ Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                dir('Jenkins/jenkins-scenarios/scenario_01_pipeline_genesis') {
                    script {
                        def image = docker.build("pipeline-genesis:${env.BUILD_NUMBER}", "--no-cache .")
                        echo "Docker image built: ${image.id}"
                    }
                }
            }
        }
        
        stage('âœ… Success!') {
            steps {
                echo 'ğŸ‰ Congratulations! Your first pipeline completed successfully!'
                echo 'You have learned:'
                echo '  - Pipeline structure (stages and steps)'
                echo '  - Basic automation workflow'
                echo '  - Docker integration'
                echo '  - Test execution'
                echo ''
                echo 'Ready for the next challenge? Move to Scenario 2!'
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline execution completed!'
        }
        success {
            echo 'ğŸŠ Pipeline Genesis completed successfully!'
            echo 'You are now a Jenkins pipeline beginner!'
        }
        failure {
            echo 'âŒ Pipeline failed - check the logs above'
        }
    }
}