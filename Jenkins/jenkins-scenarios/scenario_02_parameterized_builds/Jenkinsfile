                        echo "â•‘     â€¢ Tests will be skipped (user choice)"
                    }
                    
                    echo "â•‘     â€¢ Feature set: ${params.FEATURES}"
                    echo "â•‘     â€¢ Version: ${params.VERSION}"
                    
