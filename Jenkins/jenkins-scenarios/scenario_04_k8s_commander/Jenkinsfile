# Start the server
start_time = time.time()
server = HTTPServer(('0.0.0.0', int(os.environ.get('EXPOSE_PORT', '8080'))), K8sCommanderHandler)
print(f"K8s Commander server starting on port {os.environ.get('EXPOSE_PORT', '8080')}")
server.serve_forever()
