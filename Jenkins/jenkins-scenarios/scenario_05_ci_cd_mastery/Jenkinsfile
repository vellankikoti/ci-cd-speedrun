                            echo "â•‘     âœ… Topics endpoint OK"
                        else
                            echo "â•‘     âš ï¸  Topics endpoint not responding"
                        fi

                        echo "â•‘"
                        echo "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
                        echo "â•‘              ğŸ‰ CI/CD MASTERY - READY TO EXPLORE!              â•‘"
                        echo "â• â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•£"
                        echo "â•‘  ğŸŒ Access URL: http://localhost:\$PORT"
                        echo "â•‘  ğŸ“Š Topic: ${params.CICD_TOPIC}"
                        echo "â•‘  ğŸ¯ Level: ${params.COMPLEXITY}"
                        echo "â•‘"
                        echo "â•‘  ğŸš€ What to explore:"
