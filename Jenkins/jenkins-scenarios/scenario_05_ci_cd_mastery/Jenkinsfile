        stage('ğŸ³ Build & Deploy') {
            steps {
                script {
                    echo "â•‘"
                    echo "â•‘  ğŸ³ Building and deploying with ${params.DEPLOYMENT_STRATEGY} strategy..."
                    echo "â•‘"

                    sh '''#!/bin/bash
                        set -e

                        # Cleanup
                        echo "â•‘  ğŸ§¹ Cleaning up old containers..."
                        docker ps -a --filter "name=prod-cicd" --format "{{.Names}}" | xargs -r docker rm -f || true
                        sleep 2

                        # Build
                        IMAGE_NAME="prod-cicd-${BUILD_NUMBER}"
                        echo "â•‘  ğŸ”¨ Building image: $IMAGE_NAME"
                        docker build -t $IMAGE_NAME .
                        echo "â•‘     âœ… Image built"

                        # Find port
                        echo "â•‘  ğŸ” Finding available port..."
                        EXTERNAL_PORT=8081
                        MAX_ATTEMPTS=50
                        ATTEMPT=0
                        DEPLOY_SUCCESS=false

                        while [ $ATTEMPT -lt $MAX_ATTEMPTS ] && [ "$DEPLOY_SUCCESS" = "false" ]; do
                            PORT_IN_USE=false

                            if netstat -tuln 2>/dev/null | grep -q ":$EXTERNAL_PORT " || \\
                               lsof -i :$EXTERNAL_PORT 2>/dev/null | grep -q LISTEN || \\
                               docker ps --format "{{.Ports}}" 2>/dev/null | grep -q ":$EXTERNAL_PORT->"; then
                                PORT_IN_USE=true
                            fi

                            if [ "$PORT_IN_USE" = "true" ]; then
                                EXTERNAL_PORT=$((EXTERNAL_PORT + 1))
                                ATTEMPT=$((ATTEMPT + 1))
                                continue
                            fi

                            # Deploy
                            CONTAINER_NAME="prod-cicd-${BUILD_NUMBER}"
                            if docker run -d \\
                                --name $CONTAINER_NAME \\
                                -p $EXTERNAL_PORT:8080 \\
                                -e DEPLOYMENT_STRATEGY="${DEPLOYMENT_STRATEGY}" \\
                                -e TARGET_ENV="${TARGET_ENV}" \\
                                -e APP_VERSION="${APP_VERSION}" \\
                                -e BUILD_NUMBER="${BUILD_NUMBER}" \\
                                $IMAGE_NAME > /dev/null 2>&1; then

                                echo "â•‘     âœ… Deployed on port $EXTERNAL_PORT"
                                DEPLOY_SUCCESS=true
                                echo $EXTERNAL_PORT > webapp.port
                                break
                            else
                                EXTERNAL_PORT=$((EXTERNAL_PORT + 1))
                                ATTEMPT=$((ATTEMPT + 1))
                            fi
                        done

                        if [ "$DEPLOY_SUCCESS" = "false" ]; then
                            echo "â•‘     âŒ Deployment failed"
                            exit 1
                        fi

                        # Health check
                        echo "â•‘  â³ Waiting for health check..."
                        sleep 5
                        MAX_CHECKS=30
                        CHECK=0
                        while [ $CHECK -lt $MAX_CHECKS ]; do
                            if curl -f http://localhost:$EXTERNAL_PORT/api/health > /dev/null 2>&1; then
                                echo "â•‘     âœ… Application healthy"
                                break
                            fi
                            sleep 1
                            CHECK=$((CHECK + 1))
                        done

                        echo "â•‘"
                        echo "â•‘  ğŸ‰ Deployment successful!"
                        echo "â•‘  ğŸŒ Access at: http://localhost:$EXTERNAL_PORT"
                        echo "â•‘"
                    '''
                }
            }
        }

