        )
        booleanParam(
            name: 'SECRET_SCAN_PASS', 
            defaultValue: true, 
            description: 'âœ… Secret Scan: Pass (true) or Fail (false)'
        )
    }
    
    environment {
        DOCKER_BUILDKIT = '1'
        PYTHONUNBUFFERED = '1'
        SCENARIO_NAME = 'scenario_03_html_reports'
        IMAGE_NAME = "chaos-workshop-scenario-03"
